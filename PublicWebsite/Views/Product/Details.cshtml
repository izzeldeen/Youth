@{
    int counter = 0;
 }
@model PublicWebsite.ViewModels.ProductViewModel

<div class="home-slider owl-carousel">
    <div class="slider-item" style="background-image: url(../../images/bg_1.jpg);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">
            </div>
        </div>
    </div>

</div>
<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-5 ftco-animate">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                                <div class="carousel-inner">

                                    @foreach (var item in Model.ListPictuerUrl)
                                    {
                                        @if (counter == 0)
                                        {
                                            <div class="carousel-item active">
                                                <img src="../../../@item.Image" class="d-block w-100" style="width:50%; height:50%;" alt="...">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img src="../../../@item.Image" class="d-block w-100" style="width:50%; height:50%;" alt="...">
                                            </div>
                                        }

                                        counter++;

                                    }


                                </div>


                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div class="col-6">
                            
                                <h3>@Model.Name</h3>

                                <p class="price"><span> @Model.Price JOD</span></p>
                                <br>
                                <p>
                                 @Model.Description 
                                </p>
                                <div class="row mt-4">
                               <p>@Model.Message </p>
                                    <div class="input-group itemCartHolder">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Quantity</span>
                                        </div>
                                        @*<input type="number" class="form-control productQuantity" value="1" min="1" max="100" title="Quantity">*@
                                        <input type="number" class="quantity form-control input-number" id="input-number-@Model.Id" placeholder=""   name="Quntity" min="1" max="100">
                                        <div class="input-group-append">
                                            <button data-id="1939" type="button" onclick="labelCounter(@Model.Id)" class="noZButton btnAddToCart btn btn-primary" title="Add to Cart">
                                                <i class="fas fa-shopping-cart mr-1"></i>
                                                Add to Cart
                                            </button>
                                        </div>
                                    </div>
                            
                        </div>
                    </div>
                </div>
               

              
             
            </div>
        </div>
    </div>
</section>


