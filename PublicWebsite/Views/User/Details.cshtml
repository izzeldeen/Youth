@model PublicWebsite.Models.OrderModel
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Orders</h1>
    </div>

    <div class="row">

        <div class="col-lg-12">
            <!-- Basic Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">View Order Details</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <p>OrderId : @Model.Id</p>
                        </div>
                        <div class="col-md-3">
                            <p>Username : @Model.Username</p>
                        </div>
                        <div class="col-md-3">
                            <p>CreatedAt : @Model.CreatedAt</p>
                        </div>
                        <div class="col-md-3">
                            <p>Status : @Model.OrderStatus</p>
                        </div>
                        <div class="col-md-6 mt-2 text-center">
                            <p>Phonenumber : @Model.Phonenumber</p>
                        </div>
                        <div class="col-md-6 mt-2 text-center">
                            <p>Total Price : @Model.TotalPrice</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <p>Delivery Info : @Model.DeliveryInfo</p>
                        </div>
                        <div class="col-md-6">
                            <p>Location : <a asp-controller="Orders" asp-action="Location" asp-route-latitude="@Model.DeliveryLatitude" asp-route-longitude="@Model.DeliveryLongitude" target="_blank">Click To View Location</a></p>
                        </div>
                    </div>
                    <hr />
                    @foreach (var elem in Model.OrderItems)
                    {
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <p>Item : @elem.ItemName</p>
                            </div>
                            <div class="col-md-4">
                                <p>Quantity : @elem.Quantity</p>
                            </div>
                            <div class="col-md-4">
                                <p>Total Price : @elem.TotalPrice</p>
                            </div>
                        </div>
                        <hr />


                    }
                    @if(Model.OrderStatus == "Pending")
                    { 
                        <div class="row mt-3">
                            <div class="col-md-12 text-center">
                                <a asp-controller="Orders" asp-action="ChangeOrderStatus" asp-route-status="Decline" asp-route-id="@Model.Id" class="btn btn-danger">Decline</a>
                                <a asp-controller="Orders" asp-action="ChangeOrderStatus" asp-route-status="Accept" asp-route-id="@Model.Id" class="btn btn-success">Accept</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

</div>
<!-- /.container-fluid -->
